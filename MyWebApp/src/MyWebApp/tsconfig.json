{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots" : ["./typings"]
  },
  "include": [
    "wwwroot/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}